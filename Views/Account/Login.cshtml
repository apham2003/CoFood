@model Account;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}
<ul class="notifications"></ul>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 80px;">
            <div class="col-md-6 col-lg-4">
                <div class="login-wrap py-5">
                    <div class="img d-flex align-items-center justify-content-center">
                        <img style="width: 100%;" src="~/Images/Logo/logo.png" alt="">
                    </div>

                    <h3 class="text-center mb-0">Welcome</h3>
                    <p class="text-center">Sign in by entering the information below</p>
                    <form asp-action="Login" method="post" class="login-form needs-validation" novalidate>
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span
                                    class="bi bi-envelope"></span></div>
                            <input type="text" class="form-control" asp-for="AccGmail" placeholder="Gmail"
                                autocomplete="off" required>
                            <div class="invalid-feedback">
                                Please provide a valid Gmail.
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="icon d-flex align-items-center justify-content-center"><span
                                    class="bi bi-lock"></span></div>
                            <input type="password" class="form-control" asp-for="AccPassword" placeholder="Password"
                                autocomplete="off" required>
                            <div class="invalid-feedback">
                                Please provide a valid Password.
                            </div>
                        </div>
                        <div class="form-group d-md-flex">
                            <div class="w-100 text-md-right">
                                <a asp-action="ForgotPassword" asp-controller="Account">Forgot Password</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <button name="btnLogin" value="sumbitLogin" type="submit"
                                class="btn form-control btn-primary rounded submit px-3">Get
                                Started</button>
                        </div>
                    </form>
                    <div class="col">
                        <a asp-action="Login" asp-controller="Login" class="google btn"><i
                                class="fa-brands fa-google-plus-g" style="font-size: 22px"></i> Login
                            with Google+
                        </a>
                    </div>
                    <div class="w-100 text-center mt-4 text">
                        <p class="mb-0">Don't have an account?</p>
                        <a asp-action="Register" asp-controller="Account">Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
