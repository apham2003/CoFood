<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Co_Food</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <link rel="stylesheet" asp-append-version="true" href="~/css/style_root.css">
    <link rel="stylesheet" asp-append-version="true" href="~/css/stylePayment.css">

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navContainer" style="background-color: #467764;">
            <div class="container-fluid">
                <div class="container-xxl">
                    <div class="d-flex justify-content-between align-items-center">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>

                        </button>
                        <a class="navbar-brand" asp-action="Index" asp-controller="Product">
                            <img style="width: 130px;" src="~/Images/Logo/logo.png" alt="">
                        </a>

                        <div class="d-flex align-items-center">
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <div class="navbar-collapse-box d-flex align-items-center">
                                    <ul class="navbar-nav mb-2 mb-lg-0">
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">

                                            <a class="nav-link" asp-action="Com" style="color: white;"
                                                asp-controller="Product">Cơm</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="Pho" style="color: white;"
                                                asp-controller="Product">
                                                Phở
                                            </a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="HuTieu"
                                                style="color: white;white-space: nowrap;" asp-controller="Product">Hủ
                                                Tiếu</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="Bun" style="color: white;"
                                                asp-controller="Product">Bún</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="Chao" style="color: white;"
                                                asp-controller="Product">Cháo</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="Mien" style="color: white;"
                                                asp-controller="Product">Miến</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="Mi" style="color: white;"
                                                asp-controller="Product">Mì</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="Lau" style="color: white; "
                                                asp-controller="Product">Lẩu</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="DoNuong"
                                                style="color: white;white-space: nowrap;" asp-controller="Product">Đồ
                                                Nướng</a>
                                        </li>
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a class="nav-link" asp-action="Banh" style="color: white;"
                                                asp-controller="Product">Bánh</a>
                                        </li>
                                        <form class="nav_search" action="">
                                            <div>
                                                <input oninput="funcSearch(this)" class="nav_search-box" name='txt'
                                                    id="txtSearch" type="search" placeholder="Tìm kiếm sản phẩm"
                                                    data-bs-toggle="collapse" href="#collapseExample"
                                                    aria-expanded="false" aria-controls="collapseExample"
                                                    autocomplete="off">
                                                <button class="nav_search-icon" type="submit">
                                                    <i class="fa-solid fa-magnifying-glass"></i>
                                                </button>
                                                <div class="collapse" id="collapseExample">
                                                    <div id="content"
                                                        class="searchBoxProduct bg-light shadow-sm p-3 mb-5 bg-body rounded"
                                                        style="width: 300px; max-height: 700px; overflow: auto;">
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        @{

                                            @using FoodOrderWeb.Models;
                                            @using Microsoft.AspNetCore.Http;
                                            @using Newtonsoft.Json;
                                            String acc = Context.Session.GetString("AccGmail");
                                            if (acc != null)
                                            {
                                                <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                                    <a class="nav-link" style="color: white;white-space: nowrap;"
                                                        asp-action="UserInfo" asp-controller="User">Tài Khoản</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                                    <a class="nav-link" style="color: white;white-space: nowrap;"
                                                        asp-action="Login" asp-controller="Account">Đăng Nhập</a>
                                                </li>
                                            }
                                        }
                                        <li class="nav-item" style="margin-right: 10px; font-size: 15px;">
                                            <a style="color: white;" class="nav-link">|</a>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                            <div class="boxShop">
                                <ul class="navbar-nav mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="Index" asp-controller="Cart">
                                            <i style="color: white;" class="fa-solid fa-cart-shopping shop_icon"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</body>

</html>
